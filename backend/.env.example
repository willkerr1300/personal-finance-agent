# PostgreSQL connection string
DATABASE_URL=postgresql://travelplanner:travelplanner@localhost:5432/travelplanner

# Internal API key — must match INTERNAL_API_KEY in the frontend .env.local
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
INTERNAL_API_KEY=your_internal_api_key_here

# Fernet encryption key for sensitive fields (passport, TSA number)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_key_here

# --- Week 3-4 additions ---

# Amadeus API credentials — free sandbox at https://developers.amadeus.com
# Leave empty to use mock flight/hotel data (no real API calls)
AMADEUS_CLIENT_ID=
AMADEUS_CLIENT_SECRET=
# Use "test" for sandbox (default) or "production" for live data
AMADEUS_ENV=test

# Anthropic API key — https://console.anthropic.com
# Leave empty to use the built-in rule-based trip spec parser fallback
ANTHROPIC_API_KEY=
